# Fly.io configuration template
# Copy this to fly.toml when running: fly launch
# Or rename it: mv fly.toml.example fly.toml

app = "your-app-name-here"
primary_region = "iad"  # Change to your preferred region (iad, ord, dfw, etc.)

[build]
  builder = "paketobuildpacks/builder:base"

[env]
  PORT = "8080"

[http_service]
  internal_port = 8080
  force_https = true
  auto_stop_machines = false
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

[[vm]]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 256

